@using BikeShare.Views

@model BikeShare.ViewModels.inspectionListViewModel

@{
    ViewBag.Title = "Inspections History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section menuSection{
    @Html.Partial("_AdminMenuPartial")
}
<h2 class="text-center"><span class="glyphicon glyphicon-search pull-left"></span>@ViewBag.Title</h2>
<hr />
@section filterSection {
<div class="panel panel-primary">
    <div class="panel-heading"><h3><span class="glyphicon glyphicon-filter"></span> Filters</h3></div>
    <div class="panel-body">
        <div class="col-md-12">
            <h4>Associated With</h4>
            <div class="form-group form-inline"><label class="control-label col-md-12">Bike #: </label><input type="text" class="col-md-12" /></div>
            <div class="form-group form-inline"><label class="control-label col-md-12">User: </label><input type="text" class="col-md-12" /></div>
        </div>

        <div class="col-md-12">
            <h4>Properties</h4>
            <div class="form-group form-inline"><label class="control-label col-md-10">Has Bikes </label><input type="checkbox" class="col-md-2" /></div>
            <div class="form-group form-inline"><label class="control-label col-md-10">Missing Bikes </label><input type="checkbox" class="col-md-2" /></div>
        </div>

        <div class="col-md-12">
            <h4>Type</h4>
            <div class="form-group form-inline"><label class="control-label col-md-10">Include Archived </label><input type="checkbox" class="col-md-2" /></div>
            <div class="form-group form-inline"><label class="control-label col-md-10">Include Current </label><input type="checkbox" class="col-md-2" /></div>
        </div>
    </div>
    <div class="panel-footer text-right">
        <a href="#" class="btn btn-danger"><span class="glyphicon glyphicon-remove-circle"></span> Clear All</a>
        <a href="#" class="btn btn-primary"><span class="glyphicon glyphicon-filter"></span> Go</a>
    </div>
</div>
    }
<div class="row">
@foreach (var inspection in Model.inspections)
{
    if(inspection.isPassed)
    {<div class="col-md-6">
        <div class="panel panel-success">
            <div class="panel-heading"><h4>Inspection of @inspection.bike.bikeNumber on @inspection.datePerformed.ToShortDateString()</h4></div>
            <div class="panel-body"><p>Performed by @inspection.inspector.userName at @inspection.placeInspected.name</p></div>
            <div class="text-right panel-footer">
                <a class="btn btn-default" href="@Url.Action(actionName: "infoBike", controllerName: "Admin", routeValues: new { bikeId = inspection.bike.bikeId})"><span class="glyphicon glyphicon-time"></span> Bike</a>
                <a class="btn btn-default" href="@Url.Action(actionName: "userDetails", controllerName: "Admin", routeValues: new { userId = inspection.inspector.bikeUserId})"><span class="glyphicon glyphicon-user"></span>  Inspector</a>
                <a class="btn btn-default" href="@Url.Action(actionName: "workshopDetails", controllerName: "Admin", routeValues: new { workshopId = inspection.placeInspected.workshopId})"><span class="glyphicon glyphicon-home"></span>  Workshop</a>
            </div>
        </div>
    </div>
    }
    if (!inspection.isPassed)
    {<div class="col-md-6">
        <div class="panel panel-danger">
            <div class="panel-heading"><h4>Inspection of @inspection.bike.bikeNumber on @inspection.datePerformed.ToShortDateString()</h4></div>
            <div class="panel-body"><p>Performed by @inspection.inspector.userName at @inspection.placeInspected.name</p></div>
            <div class="text-right panel-footer">
                <a class="btn btn-default" href="@Url.Action(actionName: "infoBike", controllerName: "Admin", routeValues: new { bikeId = inspection.bike.bikeId})"><span class="glyphicon glyphicon-time"></span>  Bike</a>
                <a class="btn btn-default" href="@Url.Action(actionName: "userDetails", controllerName: "Admin", routeValues: new { userId = inspection.inspector.bikeUserId})"><span class="glyphicon glyphicon-user"></span>  Inspector</a>
                <a class="btn btn-default" href="@Url.Action(actionName: "workshopDetails", controllerName: "Admin", routeValues: new { workshopId = inspection.placeInspected.workshopId})"><span class="glyphicon glyphicon-home"></span>  Workshop</a>
            </div>
        </div>
</div>
    }



}
</div>
<hr />
<div>@Html.PageLinks(Model.pagingInfo, x => Url.Action("inspectionList", new { page = x }))</div>
