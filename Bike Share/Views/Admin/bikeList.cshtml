@using BikeShare.Views

@model BikeShare.ViewModels.FilteredBikeViewModel

@{
    ViewBag.Title = "Bikes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section menuSection{
    @Html.Partial("_AdminMenuPartial")
}

<h2><span class="glyphicon glyphicon-road pull-left"></span>  @ViewBag.Title <a class="btn btn-primary pull-right" data-toggle="modal" data-target="#siteModal" href="@Url.Action("newBike")"><span class="glyphicon glyphicon-asterisk"></span>  New</a></h2>
<div class="row">
@foreach (var bike in Model.modelList)
{
    <div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading"><h4 class="panel-title">Bike #@bike.bikeNumber - @bike.bikeName</h4></div>
        <div class="panel-body">
            <p>Last Checked out: @bike.lastCheckedOut.ToShortDateString()</p>
        </div>
        <div class="text-right panel-footer">
            <a class="btn btn-default" href="@Url.Action(actionName: "infoBike", controllerName: "Admin", routeValues: new { bikeId = bike.bikeId })"><span class="glyphicon glyphicon-list"></span>  Details</a>
            <a class="btn btn-primary" data-toggle="modal" data-target="#siteModal" href="@Url.Action("editBike", new { bikeId = bike.bikeId})"><span class="glyphicon glyphicon-pencil"></span>  Edit</a>
        </div>
    </div>
    </div>
}</div>
<hr />
<div>@Html.PageLinks(Model.pagingInfo, x => Url.Action("bikeList", new { page = x }))</div>