@model BikeShare.ViewModels.newBikeViewModel

@{
    Layout = null;
}
<script>
    $(document.body).on('hidden.bs.modal', function () {
        $('#siteModal').removeData('bs.modal')
    });
</script>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title" id="editModalLabel">New Bike</h4>
</div>
@using (Html.BeginForm())
{
<div class="modal-body">
    
@Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.bikeNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.bikeNumber)
            @Html.ValidationMessageFor(model => model.bikeNumber)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.bikeName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.bikeName)
            @Html.ValidationMessageFor(model => model.bikeName)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Bike Rack</label>
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.bikeRackId,
        new SelectList(ViewBag.query, "bikeRackId", "name"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.bikeRackId)
        </div>
    </div>
</div>
</div>
    <div role="navigation" class="modal-footer">
    <button type="submit" value="Save" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-save"></span> Save</button>
</div>
}
