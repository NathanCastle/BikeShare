@model BikeShare.Models.Bike

@{
    ViewBag.Title = "Edit Bike";
    Layout = null;
}
<script>
    $(document.body).on('hidden.bs.modal', function () {
        $('#siteModal').removeData('bs.modal')
    });
</script>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4><span class="glyphicon glyphicon-pencil"></span> @ViewBag.Title</h4></div>
@using (Html.BeginForm())
{<div class="modal-body">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.bikeId)
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label class="control-label col-md-3">Bike Number</label>
            <div class="col-md-7">
                @Html.EditorFor(model => model.bikeNumber)
                @Html.ValidationMessageFor(model => model.bikeNumber)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Bike Name</label>
            <div class="col-md-7">
                @Html.EditorFor(model => model.bikeName)
                @Html.ValidationMessageFor(model => model.bikeName)
            </div>
        </div>
    </div>
</div>
    <div class="modal-footer text-right"><button type="submit" value="Save Changes" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-save"></span> Save</button></div>
}
