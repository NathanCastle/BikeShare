@model BikeShare.ViewModels.dashViewModel

@{
    ViewBag.Title = "Bike Share Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section menuSection{
    @Html.Partial("_AdminMenuPartial")
}
<h3 class="text-center"><span class="glyphicon glyphicon-dashboard pull-left"></span>Dashboard</h3>
<hr />

<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading" style="overflow: hidden"><h3><span class="glyphicon glyphicon-road"></span> Bikes<a class="btn btn-primary pull-right" data-toggle="modal" data-target="#siteModal" href="@Url.Action("newBike")"><span class="glyphicon glyphicon-asterisk"></span>  New</a></h3> </div>
            <div class="panel-body">
                <p class="pull-right">Total: @Model.countBikes</p>
                <p class="pull-left">Available: @Model.countAvailableBikes</p>
                
            </div>
            <div class="panel-footer text-right">
                @Html.ActionLink("See all Bikes", "bikeList", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h3><span class="glyphicon glyphicon-align-right"></span> Bike Racks <a class="btn btn-primary pull-right" href="@Url.Action("newRack")"><span class="glyphicon glyphicon-asterisk"></span>  New</a></h3></div>
            <div class="panel-body">
                <p class="pull-left">Total Racks: @Model.countRacks</p>
                <p class="pull-right">Total Checkouts: @Model.countCheckouts</p>
            </div>
            <div class="panel-footer text-right">
                @Html.ActionLink("See all Bike Racks", "bikeRackList", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>

    
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><h3><span class="glyphicon glyphicon-wrench"></span> Maintenance + Compliance</h3></div>
            <div class="panel-body">
                <p>Total Maintenance Perfmormed: @Model.countMaintenance</p>
                <p>Maintenance Ongoing: @Model.countOngoingMaintenance</p>
                <p class="pull-right">Total Inspections: @Model.countInspections</p>
            </div>
            <div class="panel-footer text-right">
                @Html.ActionLink("See all Maintenance", "maintenanceList", new { }, new { @class = "btn btn-default" })
                @Html.ActionLink("See all Inspections", "inspectionList", new { }, new { @class = "btn btn-default" })
                @Html.ActionLink("See all Workshops", "workshopList", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading"><h3><span class="glyphicon glyphicon-cog"></span> App Settings</h3></div>
            <div class="panel-body">Current App information</div>
            <div class="panel-footer text-right">
                @Html.ActionLink("Manage Settings", "appSettings", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading"><h3><span class="glyphicon glyphicon-user"></span> Users <a class="btn btn-primary pull-right" data-toggle="modal" data-target="#siteModal" href="@Url.Action("newUser")"><span class="glyphicon glyphicon-asterisk"></span>  New</a></h3></div>
            <div class="panel-body">
                <p>Total Users: @Model.countUsers</p>
            </div>
            <div class="panel-footer text-right">
                @Html.ActionLink("See all Users", "userList", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><h3><span class="glyphicon glyphicon-usd"></span> Charges and Financial</h3></div>
            <div class="panel-body"><p>Total Charges: @Model.countCharges</p></div>
            <div class="panel-footer text-right">
                @Html.ActionLink("See All", "chargesList", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>