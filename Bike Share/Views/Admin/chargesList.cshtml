@using BikeShare.Views
@model BikeShare.ViewModels.PaginatedViewModel<BikeShare.Models.Charge>
@{
    ViewBag.Title = "Charges";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section menuSection{
    @Html.Partial("_AdminMenuPartial")
}
<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="newModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="newModalLabel">New Charge</h4>
            </div>
            @using (Html.BeginForm("newCharge", "Admin", new { }, FormMethod.Post, new { }))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-4">User</label>
                            <input class="form-control col-md-8" id="chargeUser" name="chargeUser" type="text" value="xxx####" />
                        </div>
                        <div class="form-group">
                            <label class="col-md-4">Amount Assessed</label>
                            <input class="form-control col-md-8" id="amountCharged" name="amountCharged" type="number" value="0.00" />
                        </div>

                        <div class="form-group">
                            <label class="col-md-4">Title</label>
                            <input class="form-control col-md-8" id="chargeTitle" name="chargeTitle" type="text" value="Title" />
                        </div>

                        <div class="form-group">
                            <label class="col-md-4">Description</label>
                            <input class="form-control col-md-8" id="chargeDescription" name="chargeDescription" type="text" value="Description" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" value="saveCharge" class="btn btn-primary"> Save</button>
                </div>
            }
        </div>
    </div>
</div>

<h3><span class="glyphicon glyphicon-usd"></span> @ViewBag.Title</h3>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading"><h3><span class="glyphicon glyphicon-stats"></span> Statistics</h3></div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>Totals</h4>
                        <p>@ViewBag.totalCharges Incidents</p>
                        <p>@ViewBag.totalResolved Resolved</p>
                        <p>$@ViewBag.totalPaid Paid</p>
                        <p>$@ViewBag.totalUnpaid Unpaid</p>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
            </div>
        </div>
    </div>
@foreach (var charge in Model.modelList)
{
    if (charge.isResolved)
    {<div class="col-md-6">
        <div class="panel panel-success">
            <div class="panel-heading"><h3>@charge.title Resolved on @charge.dateResolved.ToShortDateString()</h3></div>
            <div class="panel-body"><p>Amount: $@charge.amountPaid</p> <p>Description: @charge.description</p></div>
            <div class="panel-footer text-right">
                <a class="btn btn-default" href="@Url.Action(actionName: "userDetails", controllerName: "Admin", routeValues: new { userId = charge.user.bikeUserId})"><span class="glyphicon glyphicon-user"></span>  User</a>
                <a class="btn btn-default" href="@Url.Action(actionName: "chargeDetails", controllerName: "Admin", routeValues: new { chargeId = charge.chargeId})"><span class="glyphicon glyphicon-list"></span>  Details</a>
            </div>
        </div>
    </div>
    }
    else
    {<div class="col-md-6">
        <div class="panel panel-danger">
            <div class="panel-heading"><h3>@charge.title Opened on @charge.dateAssesed.ToShortDateString()</h3></div>
            <div class="panel-body">
                <p>Amount: $@charge.amountCharged</p> <p>Description: @charge.description</p>
            </div>
            <div class="panel-footer text-right">
                <a class="btn btn-default" href="@Url.Action(actionName: "userDetails", controllerName: "Admin", routeValues: new { userId = charge.user.bikeUserId})"><span class="glyphicon glyphicon-user"></span>  User</a>
                <a class="btn btn-default" href="@Url.Action(actionName: "chargeDetails", controllerName: "Admin", routeValues: new { chargeId = charge.chargeId})"><span class="glyphicon glyphicon-list"></span>  Details</a>
            </div>
        </div>
    </div>
    }
}
    </div>
<div>@Html.PageLinks(Model.pagingInfo, x => Url.Action("chargesForUser", new { page = x }))</div>
<hr />
<div role="navigation">
    <a class="btn btn-default" href="@Url.Action(actionName: "Index", controllerName: "Admin")"><span class="glyphicon glyphicon-arrow-left"></span>  Back to Dashboard</a>
    <a class="btn btn-primary" data-toggle="modal" data-target="#newModal"><span class="glyphicon glyphicon-shopping-cart"></span>  New Charge</a>
</div>
