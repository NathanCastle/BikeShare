@using BikeShare.Views
@model BikeShare.ViewModels.profileViewModel

@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section menuSection{
    @Html.Partial("_ExploreMenuPartial")
}
<h2><span class="glyphicon glyphicon-search"></span> @ViewBag.Title</h2>
<hr />

        <div class="panel panel-info">
            <div class="panel-heading"><h4><span class="glyphicon glyphicon-user"></span> My Details<a class="btn btn-warning pull-right" data-toggle="modal" data-target="#siteModal" href="@Url.Action("userEdit", new { userId = Model.user.bikeUserId})"><span class="glyphicon glyphicon-pencil"></span>  Edit</a></h4></div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="text-center"><img src="@BikeShare.Views.Gravatar.url(User.Identity.Name + "@rit.edu")?s=80&d=identicon" /></div>
                        <div class="text-center">This image is managed by gravatar.</div>
                        <a href="http://en.gravatar.com/emails/" class="btn btn-default btn-block">Manage your Gravatar</a>
                    </div>
                    <div class="col-md-8">
                        <div class="form-horizontal">
                            <div class="form-group form-inline">
                                <label class="control-label col-sm-4">Name</label>
                                <div class="col-sm-8"><span class="form-control-static disabled">@Model.user.userName</span></div>
                            </div>
                            <div class="form-group form-inline">
                                <label class="control-label col-sm-4">Email</label>
                                <div class="col-sm-8"><span class="form-control-static">@Model.user.email</span></div>
                            </div>
                            <div class="form-group form-inline">
                                <label class="control-label col-sm-4">Phone</label>
                                <div class="col-sm-8"><span class="form-control-static">@Model.user.phoneNumber</span></div>
                            </div>
                            <div class="form-group form-inline">
                                <label class="control-label col-sm-4">Last Registration</label>
                                <div class="col-sm-8"><span class="form-control-static">@Model.user.lastRegistered.ToShortDateString()</span></div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="panel-footer text-right">
                <a class="btn btn-primary" href="@Url.Action("Register")"><span class="glyphicon glyphicon-pencil"></span>  Renew Registration</a>
                
            </div>
        </div>

        @foreach (var card in Model.cards)
        {
            <div class="panel panel-@card.status.ToString()">
                <div class="panel-heading">@card.title</div>
                <div class="panel-body">
                    @card.date
                    @card.type.ToString()
                </div>
            </div>
        }
        <div>@Html.PageLinks(Model.pagingInfo, x => Url.Action("Index", new { page = x }))</div>
