@using BikeShare.Views
@model BikeShare.ViewModels.profileViewModel

@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section menuSection{
    @Html.Partial("_ExploreMenuPartial")
}
<h2><span class="glyphicon glyphicon-search"></span> @ViewBag.Title</h2>
<hr />

        <div class="panel panel-info">
            <div class="panel-heading"><h4><span class="glyphicon glyphicon-user"></span> My Details</h4></div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-2">Name</label>
                        <div class="col-sm-10"><span class="form-control-static">@Model.user.userName</span></div>
                    </div>
                    <div class="form-group form-inline">
                        <label class="control-label col-sm-2">Email</label>
                        <div class="col-sm-10"><span class="form-control-static">@Model.user.email</span></div>
                    </div>
                    <div class="form-group form-inline">
                        <label class="control-label col-sm-2">Phone</label>
                        <div class="col-sm-10"><span class="form-control-static">@Model.user.phoneNumber</span></div>
                    </div>
                    <div class="form-group form-inline">
                        <label class="control-label col-sm-2">Last Registration</label>
                        <div class="col-sm-10"><span class="form-control-static">@Model.user.lastRegistered.ToShortDateString()</span></div>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <a class="btn btn-primary" href="@Url.Action("Register")"><span class="glyphicon glyphicon-pencil"></span>  Renew Registration</a>
                <a class="btn btn-warning" data-toggle="modal" data-target="#siteModal" href="@Url.Action("userEdit", new { userId = Model.user.bikeUserId})"><span class="glyphicon glyphicon-pencil"></span>  Edit</a>
            </div>
        </div>

        @foreach (var card in Model.cards)
        {
            <div class="panel panel-@card.status.ToString()">
                <div class="panel-heading">@card.title</div>
                <div class="panel-body">
                    @card.date
                    @card.type.ToString()
                </div>
            </div>
        }
        <div>@Html.PageLinks(Model.pagingInfo, x => Url.Action("Index", new { page = x }))</div>
