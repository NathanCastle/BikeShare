
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center"><span class="glyphicon glyphicon-briefcase pull-left"></span>Register</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Raw(ViewBag.registerHTML)
        <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-3">First Name: </label>
            <div class="col-md-9"><input type="text" id="firstName" name="firstName" /></div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Last Name: </label>
            <div class="col-md-9"><input type="text" id="lastName" name="lastName" /></div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Phone Number: </label>
            <div class="col-md-9"><input type="tel" id="phoneNumber" name="phoneNumber" pattern="\d{3}[\-]\d{3}[\-]\d{4}" placeholder="###-###-####" title='123-123-1234' /></div>
        </div>
        <div class="form-group">
            <div class="col-md-3"></div>
            <div class="col-md-9"><input class="btn btn-primary" type="submit" value="Register" /></div>
        </div>
    </div>
}