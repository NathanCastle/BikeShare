<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RIT Bikeshare</title>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:200' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:600' rel='stylesheet' type='text/css'>
    @if (IsSectionDefined("mapsSection"))
    {
        @RenderSection("mapsSection");
    }
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/less")
    @Scripts.Render("~/bundles/modernizr")
    <link href='~/Content/footer.css' rel='stylesheet' type='text/css'>
</head>
<body style="background-color:#eeeeee">
    <div>
        @Html.Partial("_HeaderPartial")
        <div class="container body-content" style="padding-top: 60px;">
            <div class="row">

                @if (IsSectionDefined("menuSection") || IsSectionDefined("filterSection"))
                {
                    <div class="col-sm-3 hidden-print">
                        <h3></h3>
                        @if (IsSectionDefined("menuSection"))
                        {

                            @RenderSection("menuSection");
                        }
                        @if (IsSectionDefined("filterSection"))
                        {
                            <h3></h3>
                            @RenderSection("filterSection");
                        }
                    </div>
                    <div class="col-sm-9">
                        @RenderBody()
                    </div>
                }
                else
                {
                    <div class="col-sm-12">
                        @RenderBody()
                    </div>
                }
            </div>
            <div class="modal fade" id="siteModal" tabindex="-1" role="dialog" aria-labelledby="siteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">Loading</div>
                    </div>
                </div>
            </div>

        </div>
    </div>
@Html.Partial("_FooterPartial")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @if (IsSectionDefined("lateScripts"))
    {
        @RenderSection("lateScripts");
    }
</body>
</html>
